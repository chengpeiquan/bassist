{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "DOM",
      "DOM.Iterable"
    ],
    "composite": false,
    "declarationMap": true,
    "inlineSources": false
  },
  "exclude": [
    "node_modules"
  ]
}