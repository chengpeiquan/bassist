{
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "importHelpers": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./**/dist",
    "paths": {
      "@packages/*": ["./packages/*"],
      "@scripts/*": ["./scripts/*"]
    },
    "types": ["vite/client", "node"],
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "declaration": true
  },
  "include": ["packages/**/*", "scripts/**/*", "eslint.config.ts"],
  "exclude": [
    "node_modules",
    "packages/**/dist",
    "packages/**/lib",
    "packages/**/types",
    "packages/**/.build"
  ]
}
