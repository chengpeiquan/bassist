{
  "name": "@bassist/monorepo",
  "version": "0.0.0",
  "description": "No need to install the @types package anymore.",
  "author": "chengpeiquan <chengpeiquan@chengpeiquan.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsx scripts/build",
    "build:all": "tsx scripts/build/all",
    "release": "tsx scripts/release",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint": "eslint packages --ext .js,.ts,.jsx,.tsx,.vue",
    "format": "prettier --write packages",
    "mirror:get": "npm config get registry",
    "mirror:set": "npm config set registry https://registry.npmmirror.com",
    "mirror:rm": "npm config rm registry",
    "up": "npx npm-check-updates -u",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vitest/coverage-c8": "^0.28.2",
    "@withtypes/fs-extra": "^0.1.1",
    "@withtypes/mime": "^0.1.2",
    "dts-bundle-generator": "^7.1.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "simple-git-hooks": "^2.8.1",
    "tsx": "^3.12.2",
    "vite": "^4.0.4",
    "vite-plugin-banner": "^0.7.0",
    "vitest": "^0.28.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false",
    "commit-msg": "pnpm exec tsx scripts/verifyCommit $1"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
