{
  "name": "@bassist/monorepo",
  "version": "0.0.0",
  "description": "I play bass, so enjoy the name.",
  "author": "chengpeiquan <chengpeiquan@chengpeiquan.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsx ./scripts/build/build-single",
    "build:all": "tsx ./scripts/build/build-multiple",
    "pkg:publish": "tsx ./scripts/publish",
    "pkg:changelog": "tsx ./scripts/changelog.cts",
    "test": "vitest",
    "lint": "eslint packages --ext .js,.ts,.jsx,.tsx,.vue",
    "lint:inspector": "npx @eslint/config-inspector",
    "format": "prettier --write packages",
    "mirror:get": "npm config get registry",
    "mirror:set": "npm config set registry https://registry.npmmirror.com",
    "mirror:rm": "npm config rm registry",
    "up": "npx taze minor -r -f -w -i",
    "backup": "git add . && git commit -m \"chore: backup\" && git push",
    "prepare": "husky install"
  },
  "dependencies": {
    "nprogress": "^0.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@eslint/markdown": "^6.3.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@next/eslint-plugin-next": "^15.2.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.13.10",
    "@types/nprogress": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@withtypes/mime": "^0.1.2",
    "@withtypes/minimist": "^0.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.16.2",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "eslint-plugin-regexp": "^2.7.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-unicorn": "^57.0.0",
    "eslint-plugin-vue": "^9.33.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.3",
    "prettier-plugin-jsdoc": "1.3.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unocss": "^66.0.0",
    "vitest": "^3.0.8",
    "vue-eslint-parser": "^9.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}